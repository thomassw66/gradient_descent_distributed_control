MAX_TIME = 50;
NUM_AGENTS = 10;

Px = (rand(NUM_AGENTS,1)-0.5).*10;
Py = (rand(NUM_AGENTS,1)-0.5).*10;
cost = EllipsoidCostFunction(1,2);

% Create n agents 
agents = [];
for i=1:NUM_AGENTS
    a = MyAgent(Px(i), Py(i), cost);
    agents = cat(1, agents, a);
end

x = linspace(-5, 5, 20);
y = linspace(-5, 5, 20);
[X, Y] = meshgrid(x,y);
Z = cost.calculate_cost_fn(X

% control loop 
for i=0:MAX_TIME 
    clf('reset');
    hold on
    contour(X, Y, Z, 20);
    for j=1:NUM_AGENTS
        p = agents(j).getLocation();
        plot(p(1), p(2), 'or', 'MarkerSize', 5, 'MarkerFaceColor', 'r');
        agents(j).act();
    end 
    hold off
    pause(0.05);
end 
